{
    "name": "unity-crm",
    "version": "0.1.0",
    "main": "electron/dist/main.js",
    "scripts": {
        "dev": "next dev",
        "build": "next build && npm run build:electron",
        "start": "next start",
        "lint": "next lint",
        "electron": "electron .",
        "build:electron": "tsc -p electron/tsconfig.json",
        "watch:electron": "tsc-watch --project electron/tsconfig.json --onSuccess \"npm run electronmon\"",
        "electronmon": "electronmon electron/dist/main.js",
        "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
        "start:electron": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
        "package": "electron-builder",
        "clean-port": "lsof -ti :3000 | xargs kill -9",
        "gen-types": "supabase gen types typescript --project-id hioeasvyrnoxwydltfkx --schema public > src/types/supabase.d.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "type": "module"
    },
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "node"
        ]
    },
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.11",
        "@radix-ui/react-slot": "^1.2.0",
        "@sendgrid/mail": "^8.1.5",
        "@supabase/auth-helpers-nextjs": "^0.10.0",
        "@supabase/ssr": "^0.6.1",
        "@supabase/supabase-js": "^2.49.4",
        "@tailwindcss/postcss": "^4.1.3",
        "better-sqlite3": "^11.9.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "dayjs": "^1.11.13",
        "dexie": "^4.0.11",
        "dexie-react-hooks": "^1.1.7",
        "file-saver": "^2.0.5",
        "framer-motion": "^12.9.4",
        "fuse.js": "^7.1.0",
        "lodash": "^4.17.21",
        "lodash.debounce": "^4.0.8",
        "lucide-react": "^0.487.0",
        "next": "15.2.5",
        "next-intl": "^4.0.2",
        "next-themes": "^0.4.6",
        "openai": "^4.104.0",
        "qrcode.react": "^4.2.0",
        "react": "^19.0.0",
        "react-dnd": "^16.0.1",
        "react-dnd-html5-backend": "^16.0.1",
        "react-dom": "^19.0.0",
        "react-hot-toast": "^2.5.2",
        "react-hotkeys-hook": "^5.0.1",
        "recharts": "^3.1.0",
        "resend": "^4.4.1",
        "sqlite3": "^5.1.7",
        "tailwind-merge": "^3.2.0",
        "tailwindcss": "^4.1.3",
        "tesseract.js": "^4.1.1",
        "use-debounce": "^10.0.5",
        "uuid": "^11.1.0",
        "xlsx": "^0.18.5",
        "zustand": "^5.0.7"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.0",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@eslint/eslintrc": "^3",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/file-saver": "^2.0.7",
        "@types/jest": "^30.0.0",
        "@types/lodash.debounce": "^4.0.9",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-beautiful-dnd": "^13.1.8",
        "@types/react-dom": "^19",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "electron": "^31.7.7",
        "electron-builder": "^24.0.0",
        "electron-reload": "^2.0.0-alpha.1",
        "electronmon": "^2.0.3",
        "eslint": "^9",
        "eslint-config-next": "15.2.5",
        "jest": "^30.0.5",
        "jest-environment-jsdom": "^30.0.4",
        "postcss": "^8.5.3",
        "react-test-renderer": "^19.1.0",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "tsc-watch": "^6.2.1",
        "typescript": "^5",
        "wait-on": "^8.0.3"
    },
    "build": {
        "appId": "com.unity.crm",
        "productName": "Unity CRM",
        "files": [
            "electron/dist/**/*",
            "out/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        }
    }
}
